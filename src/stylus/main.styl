body
  margin 0
a
  text-decoration none

.app_container
  padding 0
  max-width 800px
  min-width 350px
  margin 0 auto
  background #e4e4e4
  font-family: 'Roboto', sans-serif;
  font-weight 300
  box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
  box-sizing border-box

.posts-list
  &__link
    text-decoration none
    color #000
    &:hover
      cursor pointer


